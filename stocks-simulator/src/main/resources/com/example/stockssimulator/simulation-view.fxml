<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.stockssimulator.uicomponents.simulation.SimulationViewController"
          maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="90.0" prefWidth="453.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" prefWidth="147.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <GridPane fx:id="gridPaneMain" GridPane.columnIndex="0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="100.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="100.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox fx:id="vBoxStocks">
            <Label text="Stocks">
                <font>
                    <Font name="Comic Sans MS" size="14.0"/>
                </font>
            </Label>
            <ListView fx:id="listViewStocks" prefHeight="200.0" prefWidth="200.0"/>
        </VBox>
        <VBox fx:id="vBoxInvestors" GridPane.rowIndex="1">
            <Label text="Investors">
                <font>
                    <Font name="Comic Sans MS" size="14.0"/>
                </font>
            </Label>
            <ListView fx:id="listViewInvestors" prefHeight="200.0" prefWidth="200.0"/>
        </VBox>
        <VBox fx:id="vBoxStockOverview" GridPane.columnIndex="1">
            <Label text="Stock Name">
                <font>
                    <Font name="Comic Sans MS" size="14.0"/>
                </font>
            </Label>
        </VBox>
        <VBox fx:id="vBoxInvestorOverview" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Investor Nickname">
                <font>
                    <Font name="Comic Sans MS" size="14.0"/>
                </font>
            </Label>
        </VBox>
        <VBox fx:id="vBoxOwnedStocks" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <Label text="Owned Stocks">
                <font>
                    <Font name="Comic Sans MS" size="14.0"/>
                </font>
            </Label>
            <ListView fx:id="listViewOwnedStocks" prefHeight="200.0" prefWidth="200.0"/>
        </VBox>
        <VBox fx:id="vBoxStockChart" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2">
            <LineChart fx:id="lineChartStock">
                <xAxis>
                    <CategoryAxis side="BOTTOM"/>
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT"/>
                </yAxis>
            </LineChart>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                <TextField promptText="start"/>
                <TextField alignment="CENTER_RIGHT" promptText="end"/>
            </HBox>
        </VBox>
    </GridPane>
    <VBox fx:id="vBoxGlobalMenu" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
        <Label fx:id="labelCurrentTime" text="09:30">
            <font>
                <Font name="Comic Sans MS" size="32.0"/>
            </font>
        </Label>
        <Label fx:id="labelTimeRate" text="Time rate: 1x">
            <font>
                <Font name="Comic Sans MS" size="18.0"/>
            </font>
        </Label>
        <Button fx:id="buttonTimeRate1" alignment="CENTER" maxWidth="1.7976931348623157E308"
                text="1x">
            <font>
                <Font name="Comic Sans MS" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="buttonTimeRate5" alignment="CENTER" maxWidth="1.7976931348623157E308"
                text="5x">
            <font>
                <Font name="Comic Sans MS" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="buttonTimeRate10" alignment="CENTER" maxWidth="1.7976931348623157E308"
                text="10x">
            <font>
                <Font name="Comic Sans MS" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="buttonTimeRate30" alignment="CENTER" maxWidth="1.7976931348623157E308"
                text="30x">
            <font>
                <Font name="Comic Sans MS" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="buttonTimeRate60" alignment="CENTER" maxWidth="1.7976931348623157E308"
                text="60x">
            <font>
                <Font name="Comic Sans MS" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="buttonTimeRate120" alignment="CENTER" maxWidth="1.7976931348623157E308"
                text="120x">
            <font>
                <Font name="Comic Sans MS" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="buttonTimeRate300" alignment="CENTER" maxWidth="1.7976931348623157E308"
                text="300x">
            <font>
                <Font name="Comic Sans MS" size="14.0"/>
            </font>
        </Button>
    </VBox>
</GridPane>
