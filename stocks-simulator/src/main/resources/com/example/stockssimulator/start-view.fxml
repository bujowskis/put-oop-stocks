<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.stockssimulator.uicomponents.ButtonLaunch">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <Label text="Stocks Simulator - Initialization">
               <font>
                  <Font name="Comic Sans MS" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" spacing="20.0">
                      <padding>
                          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                      </padding>
                     <TextField promptText="no. of stocks" />
                     <Label text="(both paths should end with &quot;\\&quot;)">
                        <font>
                           <Font name="Comic Sans MS" size="12.0" />
                        </font>
                     </Label>
                     <TextField promptText="path to data" />
                     <TextField promptText="path to Company.csv" />
                      <Button text="LAUNCH">
                        <font>
                           <Font name="Comic Sans MS" size="12.0" />
                        </font>
                     </Button>
                  </VBox>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Stocks&amp;Investors input mode">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                           <font>
                              <Font name="Comic Sans MS" size="14.0" />
                           </font>
                        </Label>
                        <RadioButton mnemonicParsing="false" text="Stocks number only">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                            <font>
                                <Font name="Comic Sans MS" />
                            </font>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Stocks and Investors numbers">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                            <font>
                                <Font name="Comic Sans MS" />
                            </font>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Stocks and Investors numbers by type">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                            <font>
                                <Font name="Comic Sans MS" />
                            </font>
                        </RadioButton>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label minWidth="-Infinity" text="Investors by types">
                           <font>
                              <Font name="Comic Sans MS" />
                           </font></Label>
                        <TextField promptText="no. of Cautious" />
                        <TextField promptText="no. of Normal" />
                        <TextField promptText="no. of Risky" />
                        <TextField promptText="no. of Crazy" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>
