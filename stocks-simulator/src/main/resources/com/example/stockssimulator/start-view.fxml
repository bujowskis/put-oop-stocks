<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.stockssimulator.uicomponents.initialization.InitializationController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <Label text="Stocks Simulator - Initialization">
               <font>
                  <Font name="Comic Sans MS" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="20.0">
                      <padding>
                          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                      </padding>
                     <TextField fx:id="textFieldStocksNo" promptText="no. of stocks" />
                     <TextField fx:id="textFieldPathData" promptText="path to data" />
                     <TextField fx:id="textFieldPathCompany" promptText="path to Company.csv" />
                  </VBox>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Stocks &amp; Investors input mode">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                           <font>
                              <Font name="Comic Sans MS" size="14.0" />
                           </font>
                        </Label>
                        <RadioButton fx:id="radioButtonStocksOnly" mnemonicParsing="false" onAction="#showSimplistic" selected="true" text="Stocks number only">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                            <font>
                                <Font name="Comic Sans MS" />
                            </font>
                           <toggleGroup>
                              <ToggleGroup fx:id="StocksAndInvestorsIO" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioButtonStocksInvestorsNo" mnemonicParsing="false" onAction="#showStocksAndInvestorsNo" text="Stocks and Investors numbers" toggleGroup="$StocksAndInvestorsIO">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                            <font>
                                <Font name="Comic Sans MS" />
                            </font>
                        </RadioButton>
                        <RadioButton fx:id="radioButtonStocksInvestorsByType" mnemonicParsing="false" onAction="#showStocksAndInvestorsByType" text="Stocks and Investors numbers by type" toggleGroup="$StocksAndInvestorsIO">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                            <font>
                                <Font name="Comic Sans MS" />
                            </font>
                        </RadioButton>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
                  <VBox fx:id="vBoxInvestorsInput" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0" visible="false">
                     <children>
                        <Label minWidth="-Infinity" text="Investors by types">
                           <font>
                              <Font name="Comic Sans MS" />
                           </font></Label>
                        <TextField fx:id="textFieldCautious" promptText="no. of Cautious" />
                        <TextField fx:id="textFieldNormal" promptText="no. of Normal" />
                        <TextField fx:id="textFieldRisky" promptText="no. of Risky" />
                        <TextField fx:id="textFieldCrazy" promptText="no. of Crazy" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <Label fx:id="labelIllegalArgumentException" textFill="RED" visible="false" wrapText="true">
               <font>
                  <Font name="Comic Sans MS" />
               </font>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </Label>
             <Button onAction="#launchSimulation" text="LAUNCH">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</GridPane>
